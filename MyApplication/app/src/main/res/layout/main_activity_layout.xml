<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        android:id="@+id/search_fragment"
        android:name="divinegrace.com.myapplication.View.Fragments.SearchFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        tools:layout="@layout/search_fragment_layout" />

    <FrameLayout
        android:id="@+id/fullscreen_overlay_layout_view"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:tag="@string/tag_full_screen">
    </FrameLayout>


    <FrameLayout
        android:id="@+id/content_layout_view"
        android:layout_below="@id/search_fragment"
        android:tag="@string/tag_contentview_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"></FrameLayout>

</RelativeLayout>

